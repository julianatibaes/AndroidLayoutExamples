<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.tibaes.layoutsexamples.MainActivity">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LinearLayout (vertical)"
            android:id="@+id/btn_linear_vertical"
            android:layout_row="1"
            android:layout_column="0"
            android:onClick="openLinearVertical" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LinearLayout (horizontal)"
            android:id="@+id/btn_linear_horizontal"
            android:layout_row="0"
            android:layout_column="0"
            android:onClick="openLinearHorizontal" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RelativeLayout"
            android:id="@+id/btn_relative"
            android:layout_row="2"
            android:layout_column="0"
            android:onClick="openRelative" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FrameLayout"
            android:id="@+id/btn_frame"
            android:layout_row="3"
            android:layout_column="0"
            android:onClick="openFrame" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TableLayout"
            android:id="@+id/btn_table"
            android:layout_row="4"
            android:layout_column="0"
            android:onClick="openTable" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GridLayout"
            android:id="@+id/btn_grid"
            android:layout_row="5"
            android:layout_column="0"
            android:onClick="openGrid" />

    </GridLayout>
</RelativeLayout>
